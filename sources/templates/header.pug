mixin header()
    header.header
        nav.wrapper.container
            a.logo(href='index.html')
                picture
                    img(src='assets/images/logo.png', alt='Takeda')
            .menu_btn
                button.page_button(type='button') <span>Показать активности</span>
            ul.navigation.container
                -var navArray = []
                -navArray.push({link: 'index.html', title: 'Главная'})
                -navArray.push({link: '', title: 'Тёплый <br>таймер'})
                -navArray.push({link: '', title: 'Рецепты <br>теплоты'})
                -navArray.push({link: '', title: 'Тёплые <br>фотографии'})
                -navArray.push({link: '', title: 'Детский <br>словарь'})
                -navArray.push({link: '', title: 'Теплые <br>заставки'})
                -navArray.push({link: '', title: '100&nbsp;способов <br>сказать&nbsp;"Спасибо"'})
                -navArray.push({link: '', title: 'Видео-<br>благодарности'})
                -navArray.push({link: '', title: 'Электронная <br>открытка'})
                -navArray.push({link: '', title: 'Online-<br>предсказания'})
                for item in navArray
                    li
                        a(href=item.link) !{item.title}